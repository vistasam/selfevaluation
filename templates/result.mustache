<div class="container">
    <div class="row">
        <div class="col text-center">
            <label for="context" id="context-heading">Please Select A Context</label>
            <select class="form-control" name="context-details" id="context-select" >
                <option value="">Please select a Context Value</option>
                {{#courseDetails}}
                    <option value="{{courseId}}">{{courseName}}</option>
                {{/courseDetails}}
            </select>
        </div>
        <div class="col text-center">
            <label for="userdetails">Please Select A User</label>
            <select class="form-control" name="userdetails" id="user-select" >
                <option value="">Please select a Student</option>
            </select>
        </div>
        <div class="col text-center">
            <label id="self-assessment-heading" for="self-assessment">Self Assessment Data</label>
            <select class="form-control" name="self-assessment" id="self-assessment-select">
                <option value="">Please select a file</option>
            </select>
        </div>
        <div class="col text-center">
            <label id="knowledge-based-heading" for="Knowledge Based">Knowledge Based Data</label>
            <select class="form-control" name="knowledge-based" id="knowledge-based-select">
                <option value="">Please select a file</option>
            </select>
        </div>
    </div>
    <div class="row mt-3">

    </div>
    <table class="table text-center table-striped table-bordered table-hover" id="dataTable">
        <thead class="thead-dark">
        <tr>
            <th>Competence Name</th>
            <th>Self Assessment Data</th>
            <th>Knowledge Based</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>FOUNDATIONS AND ACCESS</td>
            <td id="self-assessment-data-0"></td>
            <td id="knowledge-based-data-0"></td>
        </tr>
        <tr>
            <td>INFORMATION AND DATA LITERACY</td>
            <td id="self-assessment-data-1"></td>
            <td id="knowledge-based-data-1"></td>
        </tr>
        <tr>
            <td>COMMUNICATION AND COLLABORATION</td>
            <td id="self-assessment-data-2"></td>
            <td id="knowledge-based-data-2"></td>
        </tr>
        <tr>
            <td>DIGITAL CONTENT CREATION</td>
            <td id="self-assessment-data-3"></td>
            <td id="knowledge-based-data-3"></td>
        </tr>
        <tr>
            <td>SAFETY</td>
            <td id="self-assessment-data-4"></td>
            <td id="knowledge-based-data-4"></td>
        </tr>
        <tr>
            <td>PROBLEM SOLVING AND CONTINUING LEARNING</td>
            <td id="self-assessment-data-5"></td>
            <td id="knowledge-based-data-5"></td>
        </tr>
        </tbody>
    </table>
</div>